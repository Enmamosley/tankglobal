---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";


// Import necessary images
import blueprints from "@images/a2.avif";
import personWorking from "@images/a8.avif";
import beforeAfter from "@images/a3.avif";
import constructionWorkers from "@images/a4.avif";
import aerialView from "@images/a5.avif";
import usingTools from "@images/a2.avif";
import progressBuilding from "@images/a6.avif";
import underConstruction from "@images/a7.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Comprehensive ISO Tank Services",
    subTitle:
      "We provide end-to-end ISO tank solutions including logistics, cleaning, maintenance, and compliance oversight. Our operations are tailored to ensure your tank systems run efficiently and meet international standards.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "ISO tank blueprint planning",
    imgTwo: personWorking,
    imgTwoAlt: "Specialist managing ISO tank operations",
  },
  {
    isRightSection: false,
    title: "Fleet Management & Maintenance",
    subTitle:
      "Our fleet management services include real-time tracking, preventive maintenance, and asset optimization. Whether managing a single tank or a large-scale operation, we maximize performance and extend equipment lifespan.",
    img: beforeAfter,
    imgAlt: "Before and after of managed ISO tank fleet",
  },
  {
    isRightSection: true,
    title: "Sales & Leasing Solutions",
    subTitle:
      "We offer flexible purchasing and leasing options on a wide range of ISO tanks, including standard liquid, gas, and cryogenic models. Our global inventory ensures fast delivery and customized options to suit your needs.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Leased ISO tanks being delivered",
    imgTwo: aerialView,
    imgTwoAlt: "Aerial view of tank storage facility",
  },
  {
    isRightSection: false,
    title: "Spare Parts & Technical Support",
    subTitle:
      "Get access to a full catalog of certified spare parts and accessories. Backed by technical experts, we help minimize downtime and keep your ISO tank operations running smoothly.",
    img: usingTools,
    imgAlt: "Technician assembling ISO tank components",
  },
  {
    isRightSection: true,
    title: "Consulting & Custom Projects",
    subTitle:
      "Our expert team offers tailored consulting services and project planning for cryogenic, chemical, or energy-related tank operations. From feasibility studies to full execution—we design with precision and scalability in mind.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Custom ISO tank project under design",
    imgTwo: underConstruction,
    imgTwoAlt: "Modular tank construction in progress",
  },
  {
    isRightSection: false,
    title: "Tank Types & Equipment",
    subTitle: ` 
    Standard Liquid Tanks: Food grade, Chemicals, Mining, Fuels.
    Gas Tanks: Refrigerants, LPG, Pharmaceuticals.
    Cryogenic Tanks: CO₂ (Food & Beverage), Ethane (Oil & Gas), O₂ (Medical), Nitrogen (Mining), Argon (Electronics), Natural Gas (Energy).
    Available Equipment:
    - 20’ Cryogenic Tank
    - 40’ Cryogenic Tank
    - 20’ Asphalt Container
    - 40’ Asphalt Tank
    - 20’ Standard Tank
    - 20’ Gas Tank
    `,
    img: aerialView,
    imgAlt: "Different types of ISO tanks in storage",
  },
];


const pageTitle: string = `Services | ${SITE.title}`;
const metaDescription =
  "At Tank Global Solutions, we provide a full suite of ISO tank services designed to support every phase of your operations. From sales and leasing to full-scale fleet management and project consulting, our solutions are reliable, efficient, and tailored to each industry’s demands.";
const ogTitle = "Expert Services | At Tank Global Solutions,";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://tankglobalsolutions.com/services",
    url: "https://tankglobalsolutions.com/services",
    name: "Expert Services |  At Tank Global Solutions",
    description:
      "At Tank Global Solutions, we provide a full suite of ISO tank services designed to support every phase of your operations. From sales and leasing to full-scale fleet management and project consulting, our solutions are reliable, efficient, and tailored to each industry’s demands.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://tankglobalsolutions.com/",
      name: "Tank Global Solutions",
      description:
        "Tank Global Solutions offers top-tier hardware tools and expert construction services to meet all your project needs.",
    },
    inLanguage: "en-US",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Uniting Expertise with Your Vision"
    subTitle="At Tank Global Solutions, we provide a full suite of ISO tank services designed to support every phase of your operations. From sales and leasing to full-scale fleet management and project consulting, our solutions are reliable, efficient, and tailored to each industry’s demands."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="/contact"
  />
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
