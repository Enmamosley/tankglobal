---
// Importa los componentes necesarios
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Importa las imágenes necesarias
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Servicios integrales para tanques ISO",
    subTitle:
      "Brindamos soluciones de tanque ISO de principio a fin, incluyendo logística, limpieza, mantenimiento y supervisión de cumplimiento. Nuestras operaciones están diseñadas para garantizar que tus sistemas de tanques funcionen eficientemente y cumplan con los estándares internacionales.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Planificación de planos de tanque ISO",
    imgTwo: personWorking,
    imgTwoAlt: "Especialista gestionando operaciones de tanque ISO",
  },
  {
    isRightSection: false,
    title: "Gestión y mantenimiento de flotas",
    subTitle:
      "Nuestros servicios de gestión de flotas incluyen rastreo en tiempo real, mantenimiento preventivo y optimización de activos. Ya sea que gestiones un solo tanque o una operación a gran escala, maximizamos el rendimiento y extendemos la vida útil del equipo.",
    img: beforeAfter,
    imgAlt: "Antes y después de una flota de tanques ISO gestionada",
    btnExists: true,
    btnTitle: "Contáctanos",
    btnURL: "#contacto",
  },
  {
    isRightSection: true,
    title: "Soluciones de venta y arrendamiento",
    subTitle:
      "Ofrecemos opciones flexibles de compra y arrendamiento en una amplia gama de tanques ISO, incluyendo modelos estándar para líquidos, gases y criogénicos. Nuestro inventario global asegura entregas rápidas y opciones personalizadas según tus necesidades.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Entrega de tanques ISO arrendados",
    imgTwo: aerialView,
    imgTwoAlt: "Vista aérea de la instalación de almacenamiento de tanques",
  },
  {
    isRightSection: false,
    title: "Refacciones y soporte técnico",
    subTitle:
      "Accede a un catálogo completo de refacciones y accesorios certificados. Con el respaldo de expertos técnicos, te ayudamos a minimizar tiempos muertos y mantener la operación de tus tanques ISO funcionando sin problemas.",
    img: usingTools,
    imgAlt: "Técnico ensamblando componentes de tanque ISO",
  },
  {
    isRightSection: true,
    title: "Consultoría y proyectos personalizados",
    subTitle:
      "Nuestro equipo de expertos ofrece servicios de consultoría a medida y planeación de proyectos para operaciones de tanques criogénicos, químicos o energéticos. Desde estudios de factibilidad hasta la ejecución total, diseñamos con precisión y escalabilidad en mente.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Proyecto personalizado de tanque ISO en diseño",
    imgTwo: underConstruction,
    imgTwoAlt: "Construcción modular de tanques en proceso",
    btnExists: true,
    btnTitle: "Leer más",
    btnURL: "#",
  },
  {
    isRightSection: false,
    title: "Tipos de tanques y equipos",
    subTitle: ` 
    Tanques estándar para líquidos: Grado alimenticio, químicos, minería, combustibles.
    Tanques para gases: Refrigerantes, GLP, farmacéuticos.
    Tanques criogénicos: CO₂ (alimentos y bebidas), etano (petróleo y gas), O₂ (médico), nitrógeno (minería), argón (electrónica), gas natural (energía).
    Equipos disponibles:
    - Tanque criogénico de 20’
    - Tanque criogénico de 40’
    - Contenedor de asfalto de 20’
    - Tanque de asfalto de 40’
    - Tanque estándar de 20’
    - Tanque de gas de 20’
    `,
    img: aerialView,
    imgAlt: "Diferentes tipos de tanques ISO en almacenamiento",
  },
];

const pageTitle: string = `Servicios | ${SITE.title}`;
const metaDescription =
  "En Tank Global Solutions, ofrecemos un portafolio completo de servicios para tanques ISO diseñados para acompañar cada fase de tu operación. Desde venta y arrendamiento hasta gestión integral de flotas y consultoría de proyectos, nuestras soluciones son confiables, eficientes y adaptadas a las demandas de cada industria.";
const ogTitle = "Servicios expertos | En Tank Global Solutions,";

---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://tankglobalsolutions.com/es/services",
    url: "https://tankglobalsolutions.com/es/services",
    name: "Servicios expertos |  En Tank Global Solutions",
    description:
      "En Tank Global Solutions, ofrecemos un portafolio completo de servicios para tanques ISO diseñados para acompañar cada fase de tu operación. Desde venta y arrendamiento hasta gestión integral de flotas y consultoría de proyectos, nuestras soluciones son confiables, eficientes y adaptadas a las demandas de cada industria.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://tankglobalsolutions.com/es",
      name: "Tank Global Solutions",
      description:
        "Tank Global Solutions ofrece equipos de alta calidad y servicios expertos de construcción para cubrir todas las necesidades de tu proyecto.",
    },
    inLanguage: "es",
  }}
>
  {/* MainSection: sección introductoria con CTA */}
  <MainSection
    title="Unimos experiencia con tu visión"
    subTitle="En Tank Global Solutions, ofrecemos un portafolio completo de servicios para tanques ISO diseñados para apoyar cada fase de tu operación. Desde la venta y arrendamiento hasta la gestión integral de flotas y consultoría de proyectos, nuestras soluciones son confiables, eficientes y se adaptan a las necesidades de cada industria."
    btnExists={true}
    btnTitle="Agenda una consulta"
    btnURL="/contacto"
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
</MainLayout>
