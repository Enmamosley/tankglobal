---
// Importa las dependencias necesarias.
import AuthBtn from "@components/ui/buttons/AuthBtn.astro";
import ContactIconBlock from "@components/ui/blocks/ContactIconBlock.astro";
import TextInput from "@components/ui/forms/input/TextInput.astro";
import EmailContactInput from "@components/ui/forms/input/EmailContactInput.astro";
import PhoneInput from "@components/ui/forms/input/PhoneInput.astro";
import TextAreaInput from "@components/ui/forms/input/TextAreaInput.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Define las variables que se usarán en este componente
const title: string = "Contáctanos";
const subTitle: string =
  "¿Tienes preguntas o quieres hablar sobre un proyecto? Contáctanos y juntos crearemos la solución perfecta con nuestras herramientas y servicios.";
const formTitle: string = "Completa el siguiente formulario";
const formSubTitle: string = "Te responderemos en 1 o 2 días hábiles.";
---

<!-- Contacto -->
<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="text-center">
      <h1
        class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
      >
        {title}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    </div>

    <div class="mt-12 grid items-center gap-6 lg:grid-cols-2 lg:gap-16">
      <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-8">
        <h2
          class="mb-8 text-xl font-bold text-neutral-700 dark:text-neutral-300"
        >
          {formTitle}
        </h2>
        <!-- Formulario para que el usuario ingrese datos -->
        <form action="https://formspree.io/f/mzzgejwq" method="POST">
          <div class="grid gap-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <TextInput
                id="hs-firstname-contacts"
                label="Nombre"
                name="firstname"
              />
              <TextInput
                id="hs-lastname-contacts"
                label="Apellido"
                name="lastname"
              />
            </div>
            <EmailContactInput id="hs-email-contacts" />
            <PhoneInput id="hs-phone-number" />
            <TextAreaInput
              id="hs-about-contacts"
              label="Detalles"
              name="details"
            />
          </div>
          <div class="mt-4 grid">
            <AuthBtn title="Enviar mensaje" />
          </div>
          <div class="mt-3 text-center">
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {formSubTitle}
            </p>
          </div>
        </form>
      </div>

      <!--ContactIconBlocks muestran los diferentes métodos de contacto, incluyendo visitar la oficina, email, etc.-->
      <div class="divide-y divide-neutral-300 dark:divide-neutral-700">
        <ContactIconBlock
          heading="Visita nuestra oficina"
          content="Tank Global Solutions"
          isAddressVisible={true}
          addressContent="Román Marín 1900 Col. Benito Juárez Norte Coatzacoalcos, Veracruz, México"
        ><Icon name="mapPin" /></ContactIconBlock>

        <ContactIconBlock
          heading="Contáctanos por correo electrónico"
          content="¿Prefieres escribir? Envíanos un email a"
          isLinkVisible={true}
          linkTitle="contact@tankglobalsolutions.com"
          linkURL="#"
        ><Icon name="envelopeOpen" /></ContactIconBlock>
      </div>
    </div>
  </div>
</section>
